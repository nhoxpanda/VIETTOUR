@model IEnumerable<CRMVIETTOUR.Models.ContractReportViewModel>
@{
    int i = 1;
}

<div class="table-scrollable table-custom-format" id="tableDictionary-Wrapper">
    <table class="table table-bordered table-hover dataTable" id="tableDictionary">
        <thead>
            <tr>
                <td class="width24"></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th class="table-checkbox">
                    <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                </th>
                <th>Mã hợp đồng</th>
                <th>Tour</th>
                <th>Khách hàng</th>
                <th>Tổng giá trị (VNĐ)</th>
                <th>Tổng chi phí dự kiến (VNĐ)</th>
                <th>Lợi nhuận dự kiến (VNĐ)</th>
                <th>Ngày ký</th>
                <th>Người lập</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="width24">
                            <input type="checkbox" value="@item.Id" id="cb@(item.Id)" class="cbItem" name="cb" onclick="CheckSelect()" />
                        </td>
                        <td class="textalignleft">@item.Code</td>
                        <td class="textalignleft">@item.Tour</td>
                        <td class="textalignleft">@item.KhachHang</td>
                        <td class="textalignright">@(item.TongGT != null ? string.Format("{0:0,0}", item.TongGT) : "")</td>
                        <td class="textalignright">@(item.ChiPhi != null ? string.Format("{0:0,0}", item.ChiPhi) : "")</td>
                        <td class="textalignright">@(item.LoiNhuan != null ? string.Format("{0:0,0}", item.LoiNhuan) : "")</td>
                        <td>@item.NgayKy</td>
                        <td>@item.NhanVien</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td colspan="2">Tổng cộng:</td>
                <td class="textalignright" style="padding-right: 5px;">@string.Format("{0:0,0}", Model.Sum(p => p.TongGT))</td>
                <td class="textalignright" style="padding-right: 5px;">@string.Format("{0:0,0}", Model.Sum(p => p.ChiPhi))</td>
                <td class="textalignright" style="padding-right: 5px;">@string.Format("{0:0,0}", Model.Sum(p => p.LoiNhuan))</td>
                <td></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>