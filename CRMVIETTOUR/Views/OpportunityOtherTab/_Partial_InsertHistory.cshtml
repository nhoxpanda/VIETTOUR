@using CRMVIETTOUR.Utilities
@model CRM.Core.tbl_ContactHistory

<div class="modal fade  bs-modal-lg" id="modal-insert-history" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Lịch sử liên hệ</h4>
            </div>
            @using (Ajax.BeginForm("CreateHistory", "OpportunityOtherTab", null, new AjaxOptions { OnFailure = "OnFailureOpportunity", OnSuccess = "OnSuccessOpportunity", UpdateTargetId = "lichsulienhe" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Yêu cầu</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextBoxFor(model => model.Request, new { @class = "form-control", })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Ngày liên hệ</label>
                                    <div class="col-lg-3 col-md-3">
                                        <input type="date" class="form-control" id="insert-ngay-lienhe" name="ContactDate" value="@DateTime.Now.ToString("yyy-MM-dd")">
                                    </div>
                                    <label class="control-label col-lg-3 col-md-3">Trạng thái xử lý</label>
                                    <div class="col-lg-3 col-md-3">
                                        <select class="form-control" id="insert-type-lienhe" name="DictionaryId" style="width: 100%">
                                            @foreach (var item in LoadData.StatusProcessList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Diễn giải</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", id = "insert-history-note" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>
