@using CRMVIETTOUR.Utilities
@model CRM.Core.tbl_Competitor 

<div class="modal fade  bs-modal-lg" id="modal-insert-competitor" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Đối thủ</h4>
            </div>
            @using (Ajax.BeginForm("CreateCompetitor", "OpportunityOtherTab", null, new AjaxOptions { OnFailure = "OnFailureOpportunity", OnSuccess = "OnSuccessOpportunity", UpdateTargetId = "doithu" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tên công ty</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Ưu điểm</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextAreaFor(model => model.Advantage, new { @class = "form-control", id = "insert-competitor-advantage" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Nhược điểm</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextAreaFor(model => model.Disadvantage, new { @class = "form-control", id = "insert-competitor-disadvantage" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>
