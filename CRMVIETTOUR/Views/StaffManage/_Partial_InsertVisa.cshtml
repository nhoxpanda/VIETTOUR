@using CRM.Core
@using CRMVIETTOUR.Utilities
@model tbl_StaffVisa

<div class="modal fade " id="modal-insert-visa" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Thêm mới visa</h4>
            </div>
            @using (Html.BeginForm("CreateVisa", "StaffManage", FormMethod.Post, new { id = "frmInsertVisa", enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Mã visa</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextBoxFor(model => model.VisaNumber, new { @class = "form-control", id = "insert-visa-staff" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Quốc gia</label>
                                    <div class="col-lg-9 col-md-9">
                                        <select id="insert-country-visa"  name="TagsId" class="form-control" style="width: 100%">
                                            @foreach (var item in LoadData.DropdownlistCountry())
                                            {
                                                <option value="@item.Id">@item.Tags</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tình trạng</label>
                                    <div class="col-lg-9 col-md-9">
                                        <select class="form-control" name="DictionaryId" id="insert-status-visa" style="width: 100%" >
                                            @foreach (var item in LoadData.VisaStatusList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Loại visa</label>
                                    <div class="col-lg-9 col-md-9">
                                        <select class="form-control" name="VisaType" id="insert-type-visa" style="width: 100%" >
                                            @foreach (var item in LoadData.VisaTypeList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Ngày hiệu lực</label>
                                    <div class="col-lg-9 col-md-9">
                                            <input type="date" class="form-control" id="insert-createdatevisa" name="CreatedDateVisa">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Ngày hết hạn</label>
                                    <div class="col-lg-9 col-md-9">
                                            <input type="date" class="form-control" id="insert-expiredatevisa" name="ExpiredDateVisa">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="button" class="btn blue" id="btnInsertVisa">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

