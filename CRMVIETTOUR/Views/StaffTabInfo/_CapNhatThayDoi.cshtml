@using CRM.Core
@using CRMVIETTOUR.Models
@model IEnumerable<tbl_UpdateHistory>
@{
    int i = 1;
}
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tình trạng</th>
                <th>Diễn giải</th>
                <th>Nhân viên nhập</th>
                <th>Ngày cập nhật</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td  style="text-align: center">@i</td>
                        <td>@(item.DictionaryId != null ? item.tbl_Dictionary.Name : "")</td>
                        <td>@Html.Raw(item.Note)</td>
                        <td>@item.tbl_Staff.FullName</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.CreatedDate)</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>