@using CRM.Core
@using CRMVIETTOUR.Models
@model IEnumerable<TyGiaModel>

<div class="table-scrollable table-custom-format">
    @if (Model != null && Model.Count() == 0)
    {
        <p>File không hợp lệ</p>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Mã ngoại tệ</th>
                    <th>Tên Ngoại tệ</th>
                    <th>Mua vào</th>
                    <th>Chuyển khoản</th>
                    <th>Bán ra</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>@item.Ma</td>
                            <td>@item.Ten</td>
                            <td>@item.MuaVao</td>
                            <td>@item.ChuyenKhoan</td>
                            <td>@item.BanRa</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
</div>