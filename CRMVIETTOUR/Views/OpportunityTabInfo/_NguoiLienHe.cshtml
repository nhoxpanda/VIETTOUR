@using CRM.Core
@using CRMVIETTOUR.Models
@using CRMVIETTOUR.Utilities
@model IEnumerable<tbl_CustomerContact>

@if (ViewBag.IsAdd != null && ViewBag.IsAdd)
{<a class="btn btn-primary" onclick="createContact()" id="btnAddNguoiLienHe"><i class="fa fa-plus"></i>&nbsp;Thêm</a>}
<br /><br />
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Họ tên</th>
                <th>Điện thoại</th>
                <th>Địa chỉ</th>
                <th>Chức vụ</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                            {<a style="cursor: pointer" onclick="updateContact(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />}
                            @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                            {<a style="cursor: pointer" onclick="deleteContact(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>}
                        </td>
                        <td>@item.FullName</td>
                        <td>@item.Mobile</td>
                        <td>@item.Address @(item.TagsId != null ? ", " + LoadData.LocationTags(item.TagsId) : "")</td>
                        <td>@item.Position</td>
                        <td>@item.Email</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>