@using CRM.Core
@model IEnumerable<tbl_ReviewTour>
@{
    int i = 1;
}

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tour</th>
                <th>Điểm trung bình</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td  style="text-align: center">@i</td>
                        <td>@(item.TourId != null ? item.tbl_Tour.Code + " - " +item.tbl_Tour.Name : "")</td>
                        <td>@string.Format("{0:0.##}", item.AverageMark)</td>
                        <td>@Html.Raw(item.Note)</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>


