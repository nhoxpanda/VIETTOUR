@model CRM.Core.tbl_Partner

<div class="modal fade  bs-modal-lg" id="modal-insert-map" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title"></h4>
            </div>
            @using (Html.BeginForm("CreateMap", "PartnerManage"))
            {
                @Html.HiddenFor(model => model.Id)
                
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Địa chỉ</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextBoxFor(model => model.AddressMap, new { @class="form-control", onchange="codeAddress()" })
                                        @Html.HiddenFor(model => model.xMap)
                                        @Html.HiddenFor(model => model.yMap)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2"></label>
                                    <div class="col-lg-9 col-md-9">
                                        <div id="map"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue" id="btnLuuThem">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>