@using CRMVIETTOUR.Utilities
@model CRM.Core.tbl_TourCustomerService

<div class="modal fade bs-modal-lg" id="modal-insert-servicecustomer" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Thêm dịch vụ cho khách hàng trong tour</h4>
            </div>
            @using (Ajax.BeginForm("CreateService", "TourOtherTab", null, new AjaxOptions { OnFailure = "OnFailureTourTab", OnSuccess = "OnSuccessTourTab" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Dịch vụ</label>
                                    <div class="col-lg-10 col-md-10">
                                        @Html.TextBoxFor(model => model.ServiceName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Số lượng</label>
                                    <div class="col-lg-4 col-md-4">
                                        @Html.TextAreaFor(model => model.Quantity, new { @class = "form-control", type = "number" })
                                    </div>
                                    <label class="control-label col-lg-2 col-md-2">Đơn giá</label>
                                    <div class="col-lg-4 col-md-4">
                                        @Html.TextAreaFor(model => model.UnitPrice, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Thành tiền</label>
                                    <div class="col-lg-4 col-md-4">
                                        @Html.TextAreaFor(model => model.TotalPrice, new { @class = "form-control", id = "insert-service-totalprice" })
                                    </div>
                                    <label class="control-label col-lg-2 col-md-2">Đơn vị</label>
                                    <div class="col-lg-4 col-md-4">
                                        <select class="form-control" style="width: 100%" id="insert-service-currency" name="CurrencyId">
                                            @foreach (var item in LoadData.CurrencyList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                    <div class="col-lg-10 col-md-10">
                                        @Html.TextBoxFor(model => model.Note, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>


