@model IEnumerable<CRMVIETTOUR.Models.ReviewTourModel>
@{
    int i = 1;
}

@if (ViewBag.IsAdd != null && ViewBag.IsAdd)
{
    <a class="btn blue" onclick="btnCreateReview()"><i class="fa fa-plus"></i>&nbsp;Thêm đánh giá</a>
}
<br /><br />
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="table-rate">
        <thead>
            <tr>
                <th>STT</th>
                <th>Họ tên</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Dịch vụ</th>
                <th>Số điểm</th>
                <th>Ý kiến</th>
                <th>Người nhập</th>
                <th>Ngày nhập</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td  style="text-align: center">@i</td>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Service</td>
                        <td>@item.Mark</td>
                        <td>@Html.Raw(item.Note)</td>
                        <td>@item.Staff</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.Date)</td>
                    </tr>
                    i++;
                }
                <tr>
                    <th colspan="5">Điểm trung bình</th>
                    <td>@string.Format("{0:##}", Model.Sum(p=>p.Mark) / Model.Count())</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>