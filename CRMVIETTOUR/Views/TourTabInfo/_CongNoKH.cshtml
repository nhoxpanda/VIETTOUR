<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="table-history">
        <thead>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Tên khách</th>
                <th>Sale</th>
                <th>Điều hành</th>
                <th>Chi tiết thu</th>
                <th>Đợt 1</th>
                <th>Ngày</th>
                <th>Đợt 2</th>
                <th>Ngày</th>
                <th>Tổng thu</th>
                <th>Ghi chú đã chi visa</th>
                <th>Chi hoàn trả khách</th>
                <th>Ghi chú thu full</th>
                <th>Ghi chú thu hợp đồng</th>
                <th>Ghi chú lấy hóa đơn</th>
                <th>Ghi chú PP-VS</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                            {<a style="cursor: pointer" onclick="updateLiabilityCustomer(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />}
                            @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                            {<a style="cursor: pointer" onclick="deleteLiabilityCustomer(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>}
                        </td>
                        <td style="text-align: center">@i</td>
                        <td>@item.Customer</td>
                        <td>@item.Sale</td>
                        <td>@item.Guide</td>
                        <td>@Html.Raw(item.Note)</td>
                        <td>@item.Price1</td>
                        <td>@item.Date1</td>
                        <td>@item.Price2</td>
                        <td>@item.Date2</td>
                        <td>@item.TotalContract</td>
                        <td>@item.TotalVisa</td>
                        <td>@item.TotalReturn</td>
                        <td>@Html.Raw(item.FullNote)</td>
                        <td>@item.IsContract</td>
                        <td>@item.IsBill</td>
                        <td>@item.IsPPVS</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
<div id="service-list"></div>