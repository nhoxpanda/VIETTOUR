@using CRM.Core
@using CRMVIETTOUR.Models
@using CRMVIETTOUR.Utilities
@model IEnumerable<FunctionViewModel>
    @{ int i = 1;}
    <div class="table-scrollable table-custom-format">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td  style="text-align: center">@i</td>
                            <td>@item.Name</td>
                            <td>
                                @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                                { <a style="cursor: pointer" onclick="deleteFunction(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>}
                            </td>
                        </tr>
                                i++;
                    }
                }
            </tbody>
        </table>
    </div>
