@using CRM.Core
@model IEnumerable<tbl_ServicesPartner>
@{int i = 1;}

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên dịch vụ</th>
                <th>Giá cả</th>
                <th>Ghi chú</th>
                <th>Ngày cập nhật</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td  style="text-align: center">@i</td>
                        <td>@item.Name</td>
                        <td>@string.Format("{0:0,0}", item.Price).Replace(',', '.') @item.tbl_DictionaryCurrency.Name</td>
                        <td>@Html.Raw(item.Note)</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.ModifiedDate)</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
