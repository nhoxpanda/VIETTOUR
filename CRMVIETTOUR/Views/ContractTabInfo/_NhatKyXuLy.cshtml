@using CRM.Core
@model IEnumerable<tbl_UpdateHistory>

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="">
        <thead>
            <tr>
                <th>Ngày xử lý</th>
                <th>Trạng thái</th>
                <th>Diễn giải</th>
                <th>Nhân viên quản lý</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>@string.Format("{0:dd/MM/yyyy}", item.CreatedDate)</td>
                        <td>@item.tbl_Dictionary.Name</td>
                        <td>@Html.Raw(item.Note)</td>
                        <td>@item.tbl_Staff.FullName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>
